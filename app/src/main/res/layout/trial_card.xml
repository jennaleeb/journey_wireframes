<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/trial_card"
    android:layout_marginTop="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/windowBackground"
        android:elevation="2dp"
        android:id="@+id/linearLayout" >

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@color/colorSubHeader"
        >


        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/icon_game_played"
            android:visibility="gone"
            android:background="@android:drawable/ic_menu_slideshow"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/card_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_gravity="left|center_vertical"
            android:layout_toRightOf="@+id/icon_game_played"
            android:paddingLeft="5dp"
            />


        <TextView
            android:id="@+id/card_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="right|end|center_vertical"
            android:textSize="18sp"
            android:paddingRight="5dp"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height= "2dp"
            android:background="#12568850">
        </View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0:8:00 AM"
            android:id="@+id/card_time"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/step_count_value"
                    android:layout_gravity="center"
                    android:textSize="32sp"
                    android:layout_marginBottom="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/step_count"
                    android:id="@+id/step_count_label"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:gravity="center"
                    android:background="@drawable/round_text_green"
                    android:id="@+id/stride_var_value"
                    android:color="@color/colorWhiteTranslucent"
                    android:layout_gravity="center"
                    android:textSize="32sp"
                    android:layout_marginBottom="5dp"
                          android:textColor="@color/colorWhiteTranslucent"/>

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="@string/stv"
                          android:id="@+id/step_var_label"
                          android:layout_gravity="center"/>

            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

</android.support.v7.widget.CardView>